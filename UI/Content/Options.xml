          </OnEnter>
          <OnLeave>
            GameTooltip:Hide()
          </OnLeave>
        </Scripts>
      </CheckButton>
    </Frames>
    <Scripts>
      <OnLoad>
        AutoLFM.UI.Content.Options.OnLoad(this)
      </OnLoad>
      <OnShow>
        AutoLFM.UI.Content.Options.OnShow(this)
      </OnShow>
    </Scripts>
  </Frame>
</Ui>
