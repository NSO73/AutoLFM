<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
  <Script file="UI\Content\Options.lua"/>

  <!--==========================================================================
    Options Content Panel
    ==========================================================================
    Global addon options and settings
    ==========================================================================-->
  <Frame name="AutoLFM_Content_Options" parent="AutoLFM_MainFrame_Content" hidden="true" virtual="true">
    <Size>
      <AbsDimension x="298" y="230"/>
    </Size>
    <Anchors>
      <Anchor point="TOPLEFT"/>
    </Anchors>
    <Frames>
      <!-- Auto Invite -->
      <CheckButton name="$parent_AutoInvite" inherits="UICheckButtonTemplate">
        <Size>
          <AbsDimension x="24" y="24"/>
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="10" y="-10"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="ARTWORK">
            <FontString name="$parent_Label" inherits="GameFontNormal" text="Auto Invite">
              <Anchors>
                <Anchor point="LEFT" relativePoint="RIGHT">
                  <Offset>
                    <AbsDimension x="5" y="0"/>
                  </Offset>
                </Anchor>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
        <Scripts>
          <OnClick>
            AutoLFM.UI.Content.Options.OnOptionToggle("AutoInvite", this:GetChecked() == 1)
          </OnClick>
          <OnEnter>
            GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
            GameTooltip:SetText("Automatically invite players who whisper you", 1, 1, 1, 1, true)
            GameTooltip:Show()
          </OnEnter>
          <OnLeave>
            GameTooltip:Hide()
          </OnLeave>
        </Scripts>
      </CheckButton>

      <!-- Auto Accept -->
      <CheckButton name="$parent_AutoAccept" inherits="UICheckButtonTemplate">
        <Size>
          <AbsDimension x="24" y="24"/>
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="10" y="-40"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="ARTWORK">
            <FontString name="$parent_Label" inherits="GameFontNormal" text="Auto Accept Group Invites">
              <Anchors>
                <Anchor point="LEFT" relativePoint="RIGHT">
                  <Offset>
                    <AbsDimension x="5" y="0"/>
                  </Offset>
                </Anchor>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
        <Scripts>
          <OnClick>
            AutoLFM.UI.Content.Options.OnOptionToggle("AutoAccept", this:GetChecked() == 1)
          </OnClick>
          <OnEnter>
            GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
            GameTooltip:SetText("Automatically accept group invitations", 1, 1, 1, 1, true)
            GameTooltip:Show()
          </OnEnter>
          <OnLeave>
            GameTooltip:Hide()
          </OnLeave>
        </Scripts>
      </CheckButton>

