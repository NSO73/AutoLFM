<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

  <!--==========================================================================
    Quests Content Panel
    ==========================================================================-->
  <Frame name="AutoLFM_Content_Quests" virtual="true">
    <Size>
      <AbsDimension x="298" y="252"/>
    </Size>
    <Anchors>
      <Anchor point="TOPLEFT"/>
    </Anchors>

    <Layers>
      <Layer level="BACKGROUND">
        <Texture file="Interface\AddOns\AutoLFM3\UI\Textures\ContentBackground">
          <Anchors>
            <Anchor point="TOPLEFT"/>
            <Anchor point="BOTTOMRIGHT"/>
          </Anchors>
          <Color r="0.1" g="0.1" b="0.1" a="0.5"/>
        </Texture>
      </Layer>
      <Layer level="ARTWORK">
        <FontString inherits="GameFontHighlightLarge" text="Quests">
          <Anchors>
            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="-10"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <FontString inherits="GameFontNormalSmall" text="Select quests to broadcast">
          <Anchors>
            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="-35"/>
              </Offset>
            </Anchor>
          </Anchors>
          <Color r="0.7" g="0.7" b="0.7"/>
        </FontString>
        <FontString inherits="GameFontNormal" text="[PLACEHOLDER: Quests Content]">
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
          <Color r="1" g="1" b="0"/>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

</Ui>
